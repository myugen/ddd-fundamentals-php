{
    "name": "leanmind/php-boilerplate",

    "autoload": {
        "psr-4": {
            "LeanMind\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "LeanMind\\Tests\\": "tests/"
        }
    },

    "require-dev": {
        "phpunit/phpunit": "^12.2",
        "mockery/mockery": "^1.6"
    },
    "scripts": {
        "test": [
            "phpunit --testdox --colors=always"
        ],
        "test:coverage": [
            "phpunit --coverage-html coverage"
        ]
    }
}
